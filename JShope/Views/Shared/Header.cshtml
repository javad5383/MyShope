@using JShope.Services.Interface

<!-- responsive-header -->
@inject IProductService _productService



<nav class="navbar direction-ltr fixed-top header-responsive">
    <div class="container">
        <div class="navbar-translate">
            <a class="navbar-brand" href="#pablo">
                <img src="/assets/img/logo.png" height="24" alt="">
            </a>
            <button class="navbar-toggler navbar-toggler-right " type="button" data-toggle="collapse"
                    data-target="#navigation" aria-controls="navigation-index" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-bar bar1"></span>
                <span class="navbar-toggler-bar bar2"></span>
                <span class="navbar-toggler-bar bar3"></span>
            </button>
            <div class="search-nav default">
                <form action="">
                    <input type="text" placeholder="جستجو ...">
                    <button type="submit"><img src="/assets/img/search.png" alt=""></button>
                </form>
                <ul>
                    
                        <li><a href="/"><i class="now-ui-icons users_single-02"></i></a></li>
                    
                   
                    <li><a href="#"><i class="now-ui-icons shopping_basket"></i></a></li>
                </ul>
            </div>
        </div>

        <div class="collapse navbar-collapse justify-content-end" id="navigation">
            <div class="logo-nav-res default text-center">
                <a href="#">
                    <img src="/assets/img/logo.png" height="36px" alt="">
                </a>
            </div>

            <ul class="navbar-nav default">
                @foreach (var category in _productService.GetCategory())
                {

                    <li class="sub-menu">
                        <a href="/productMain/@category.CategoryId">@category.CategoryName</a>
                        <ul>
                            @foreach (var group in _productService.GetGroupsByCategoryId(category.CategoryId))
                            {

                                <li class="sub-menu">
                                    <a href="#">@group.GroupName</a>


                                    <ul>

                                        @foreach (var subGroup in _productService.GetSubGroupsByGroupId(group.GroupId))
                                        {
                                            <li>
                                                <a href="#">@subGroup.SubGroupName</a>
                                            </li>
                                        }

                                    </ul>

                                </li>
                            }
                        </ul>
                    </li>
                }

            </ul>

        </div>
    </div>
</nav>


<div class="wrapper default">


    <header class="main-header default">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-md-3 col-sm-4 col-5">
                    <div class="logo-area default">
                        <a href="#">
                            <img src="/assets/img/logo.png" alt="">
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-5 col-sm-8 col-7">
                    <div class="search-area default">
                        <form id="srchfrm" asp-controller="ProductsMain" asp-action="Index" method="get" class="search">

                            <input value="@ViewData["search"]" name="search" id="srchbox" type="text" placeholder="نام کالا، برند و یا دسته مورد نظر خود را جستجو کنید…">
                            <input id="SelectedId" type="hidden" name="selectedId" />
                            <button type="submit" id="srchBtn"><img src="/assets/img/search.png" alt=""></button>
                        </form>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12">
                    <div class="user-login dropdown">


                        @if (!User.Identity.IsAuthenticated)
                        {


                            <a href="#" class="btn btn-neutral dropdown-toggle" data-toggle="dropdown"
                               id="navbarDropdownMenuLink1" aria-expanded="false">
                                ورود / ثبت نام
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink1">
                                <div class="dropdown-item">
                                    <a asp-action="Login" asp-controller="User" class="btn btn-info">ورود به دیجی کالا</a>
                                </div>
                                <div class="dropdown-item font-weight-bold">
                                    <span>کاربر جدید هستید؟</span> <a class="register" asp-action="Register" asp-controller="User">ثبت‌نام</a>
                                </div>
                            </ul>

                        }

                    </div>
                    <div style="display: flex">
                        <div style="margin-right: 77%" class="row">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a data-toggle="tooltip" data-placement="top" title="نمایش پروفایل" class="show-onhover" href="/userprofile/profile">
                                    <img style="width: 30px" src="/assets/img/svg/user(1).png" />
                                </a>
                            }
                            <a data-toggle="tooltip" data-placement="top" title="سبد خرید" href="/cart">
                                <img style="width: 30px;margin-right: 10%" src="/assets/img/svg/shopping-cart.png" />

                            </a>
                            <span id="cartBadge" style="background-color: #a1150b; color: white; font-size: 12pt " class="badge badge-bold">5</span>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <nav class="main-menu">
            <div class="container">


                <ul class="list float-right">
                    @foreach (var category in _productService.GetCategory())
                    {
                        <li class="list-item list-item-has-children mega-menu mega-menu-col-5">
                            <a class="nav-link" asp-action="Index" asp-controller="ProductsMain" asp-route-id="@category.CategoryId" asp-route-Show="ByCategory">@category.CategoryName</a>

                            <ul class="sub-menu nav">
                                @foreach (var group in _productService.GetGroupsByCategoryId(category.CategoryId))
                                {
                                    <li class="list-item list-item-has-children">
                                        <i class="now-ui-icons arrows-1_minimal-left"></i>
                                        <a class="main-list-item nav-link" asp-action="Index" asp-controller="ProductsMain" asp-route-id="@group.GroupId" asp-route-show="ByGroup">
                                            @group.GroupName
                                        </a>
                                        <ul class="sub-menu nav">
                                            @foreach (var subGroup in _productService.GetSubGroupsByGroupId(group.GroupId))
                                            {
                                                <li class="list-item">
                                                    <a class="nav-link" asp-action="Index" asp-controller="ProductsMain" asp-route-id="@subGroup.SubGroupId" asp-route-show="BySubGroup">@subGroup.SubGroupName </a>
                                                </li>
                                            }



                                        </ul>
                                    </li>
                                }

                                @*<img src="/assets/img/1636.png" alt="">*@
                            </ul>
                        </li>


                    }


                    <li class="list-item amazing-item">
                        <a class="nav-link" href="#" target="_blank">شگفت‌انگیزها</a>
                    </li>
                </ul>


            </div>
        </nav>
    </header>
</div>


