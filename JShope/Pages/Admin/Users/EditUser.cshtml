<script>
    var first = true;
    function MyFunc() {

        var upload = document.getElementById('uplodimg');
        if (first) {

           
            upload.type = 'file';
            document.getElementById('Click').innerHTML = 'لغو';
            first = false;
        } else {
            upload.type = 'hidden';
            first = true;
            document.getElementById('Click').innerHTML = 'تغییر آواتار';
        }
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#pictuer').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#uplodimg").change(function () {
            readURL(this);
        });
    }


</script>