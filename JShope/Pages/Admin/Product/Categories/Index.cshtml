@page "{id?}"
@model JShope.Pages.Admin.Product.Categories.AddCategoryModel
@{
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link href="~/css/skins/_all-skins.css" rel="stylesheet" />
<div class="wrapper">
    <div class="content-wrapper">
        <section class="content">
            <form method="post" role="application" id="steps-uid-1">
                <div class="box-body wizard-content">

                    <div style="margin-top: 3%" class="form-row align-items-center">
                        <div style="margin-left: 2%">
                            <h3>دسته بندی جدید:</h3>
                        </div>
                        <div class="col-auto">
                            <input name="newCategoryName" type="text" class="form-control mb-2" id="inlineFormInput1">
                            <span id="inlineFormInput2" class="text-danger"></span>
                            <div class="text text-danger" asp-validation-summary="All"></div>
                        </div>
                        <div class="col-auto">
                            <button id="btn2" type="submit" class="btn btn-success-outline  "><i class="fa fa fa-plus"></i></button>
                        </div>
                    </div>
                    <div style="margin-top: 3%;margin-bottom: 3%"class="border border-bottom"></div>
                    <div>
                        <h1>دسته بندی ها</h1>
                        @foreach (var item in Model.Categories)
                        {
                            <div style="margin-top: 2%; margin-right: 1%" class="btn-group">
                                <button type="button" class="btn btn-secondary">@item.CategoryName</button>
                                <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(98px, 38px, 0px); top: 0px; left: 0px; will-change: transform;">
                                    <a href="/admin/product/categories/editcategory/@item.CategoryId" class="dropdown-item">ویرایش</a>



                                    <a href="/admin/product/Categories/removecategory/@item.CategoryId" class="dropdown-item">حذف</a>

                                    <div class="dropdown-divider"></div>
                                    <a id="grp_1" href="/admin/product/groups/@item.CategoryId" class="dropdown-item" >    گروه ها</a>
                                </div>
                            </div>
                        }
                        <div class="text text-danger" asp-validation-summary="All"></div>
                        

                    </div>
                   
                </div>
              
               
            </form>
        </section>
    </div>
</div>



<script>
    $(document).ready(function() {
        $("#btn2").prop('disabled', true);
        
        $("#inlineFormInput1").keyup(function() {
            if ($(this).val()!=="") {
                $("#btn2").prop('disabled', false);
               
            }
        });
        $("#inlineFormInput1").keydown(function() {
            if ($(this).empty()) {
                $("#btn2").prop('disabled', true);
                
            }
        });
       
    });
</script>