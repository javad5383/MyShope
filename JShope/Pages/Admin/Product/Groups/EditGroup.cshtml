@page "{groupId}"
@model JShope.Pages.Admin.Product.Groups.EditGroupModel
@{
}




<div class="wrapper">
    <div class="content-wrapper">
        <section class="content">
            <form method="post">

                <div>

                    
                    <div style="height: 100px">
                        <h3>نام گروه</h3>
                        <div @*style="padding-top: 7%"*@ class="input-group">


                            <input asp-for="Group.GroupName" style="max-width: 50%" type="text" class="form-control">

                           


                        </div>
                    </div>


                    <div class="box-body">

                        <div class="col-sm-4" style="display: flex">
                            <div >
                                <h2>انتقال به دسته بندی دیگر </h2>
                            </div>
                            <div style="margin-right: 4%" class="btn-group">

                                <div class="controls">

                                    <select class="form-control" asp-for="Group.CategoryId" asp-items="@ViewData["category"] as SelectList"></select>


                                </div>
                            </div>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>


                    </div>

                    
                    <button style="width: 20%; margin-right: 27%" type="submit" class="btn btn-success-outline">انجام</button>
                    <a href="/admin/product/groups/@Model.Group.CategoryId" style="width: 20%; margin-right: 1%"  class="btn btn-danger-outline">بازگشت</a>
                    
                </div>


            </form>
        </section>
    </div>
</div>

